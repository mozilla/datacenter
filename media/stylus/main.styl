@import 'vars';


* {
    box-sizing: border-box;
}

body {
    font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    margin: 0;
}

header {
    background: #eaeff2 url('../img/grain.png');
    height: 100px;

    a {
        color: #333;
    }
}

/* Hack to vertically center the title while still playing nice with
   Tabzilla */
#h1-wrapper {
    align-items: center;
    display: flex;
    float: left;
    height: 100%;
}

h1, h2, h3, h4, h5, h6 {
    letter-spacing: -0.03em;
}

h1 {
    font-size: 1.9em;
    margin: 0 0 0 20px;
}

main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

a {
    color: #217ac0;
    text-decoration: none;
}

@media $mq-small-phone-or-smaller {
    #h1-wrapper {
        width: 100%;
    }

    h1 {
        margin: 0 auto;
    }

    #tabzilla {
        display: none;
    }
}
